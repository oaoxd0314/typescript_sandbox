{
	"include": ["src/**/*"],
	"exclude": ["node_modules/*", "coverage/*"],
	"compilerOptions": {
		"target": "ES2015",
		"module": "CommonJS",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "error",
		"allowSyntheticDefaultImports":true,
		"incremental": true,
		"types": ["node"],
        "baseUrl": ".",
		"isolatedModules": false,
		"outDir": "dist"
	}
}